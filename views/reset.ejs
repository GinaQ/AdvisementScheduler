<!DOCTYPE html>
<html lang='en' >
<%- include('./partials/header') %>
<head><title>Advisement</title></head>

<body>
    <div class="container-fluid">
    <nav class="navbar navbar-fixed-top navbar-default">
        <div class="navbar-header">
            <br>
            <img style="max-height:100px; margin-top: -9px" src="images/uco-logo-wide-white.png" alt="">
            <span class="icon-bar"></span>
        </div>
    </nav>
    </div>
    <div class="container-fluid width-c">
        <div id="content" class="center_content full-heigth">
            <div class="row">
                <div class="col-md-12">
                    <br>
                    <h2 class="h2">Advisement</h2><br>
                    <% if (messageerror && messageerror.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= messageerror %>
                        </div>
                    <% } %>
                    <% if (messagesuccess && messagesuccess.length > 0) { %>
                        <div class="alert alert-success" role="alert">
                            <%= messagesuccess %>
                        </div>
                    <% } %>
                </div>
            </div>
            <div>
                <form name='resetPassword' action='/reset/<%= req.params.token %>' method='post' onsubmit='return validateForm()'>
                    <div class='form-group row'>
                        <label for='password' class="col-md-2 col-form-label">New Password:</label>
                        <div class="col-sm-10">
                            <input type='password' name='password' class='form-control' id='password' placeholder='New Password' autofocus>
                        </div>
                    </div>
                    <div class='form-group row'>
                        <label for='confirm' class="col-md-2 col-form-label">Confirm Password:</label>
                        <div class="col-sm-10">
                            <input type='password' name='confirm' class='form-control' id='confirm' placeholder='Confirm Password'>
                        </div>
                    </div>
                    <button type='submit' class='btn btn-primary'>Update Password</button>
                </form>
            </div>
            <br><br>
        </div>
    </div>
    <%- include ('./partials/footer') %>
    <%- include ('./partials/scripts') %> 
</body>
<script>
        function validateForm() {
            const password = document.forms["resetPassword"]["password"].value;
            const confirm = document.forms["resetPassword"]["confirm"].value;
            if (password.length < 4) {
                alert("password must have at least 4 chars");
                return false;
            }
            if(password != confirm){
                alert('passwords do not match');
                return false;
            }
            return true;
        }
    </script>
</html>